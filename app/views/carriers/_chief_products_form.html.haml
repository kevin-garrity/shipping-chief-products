%h3 SHIPPING PROVIDERS
%div{:class=>"ego_container panel"}
  = check_box :carrier_preference, :offer_e_go
  = label_tag :off_ego, "Offer E-Go rates", :id=>"off_ego_label"
  %div{:class=>"ego_options"}
    = label_tag :ego_depot_option, "EGO depot option"
    = select :carrier_preference, :ego_depot_option, options_for_select([['None',''],['depot2door','depot2door']])
    %br
    = label_tag :ego_explanation, "Tooltip text for E-Go delivery options" 
    = text_area :carrier_preference, :ego_explanation
%div{:class=>"ego_container panel"}
  = check_box :carrier_preference, :offer_australia_post
  = label_tag :off_aus_post, "Offer Australia Post Rates", :id=>"off_aus_label"
  %br
  %div{:class=>"aus_post_options"}
    %div International
    %br
    %table
      %tr(class="header") 
        %td 
        %td Shipping Method
        %td Method Name
        %td Method Description  
      
      - service_list_int =  {:INTL_SERVICE_ECI_M =>"Express Courier International Merchandise",
        :INTL_SERVICE_EPI => "Express Post International",
        :INTL_SERVICE_AIR_MAIL => "Air Mail"}
      - Preference.AusPostParcelServiceListInt.each {|key, method_name|
      %tr 
        %td
          = check_box_tag("shipping_methods_int[#{key}]", value=1, @preference.shipping_methods_allowed_int[key.to_s])      
        %td 
          = method_name
        %td
          = text_field_tag("shipping_methods_desc_int[#{key}]", @preference.shipping_methods_desc_int[key.to_s].nil? ? method_name : @preference.shipping_methods_desc_int[key.to_s])    
        %td
          = text_field_tag("shipping_methods_long_desc_int[#{key}]", @preference.shipping_methods_long_desc_int[key.to_s].nil? ? method_name : @preference.shipping_methods_long_desc_int[key.to_s])                      
       
      -}    
    %br 
    - service_list_aus = {:AUS_PARCEL_REGULAR =>"Regular Parcel",
                          :AUS_PARCEL_EXPRESS => "Express Post Parcel",
                          :AUS_PARCEL_PLATINUM => "Express Post Platinum Parcel"}
    %div Domestic
    %br
    %table(class="twelve")
      %tr(class="header") 

        %td 
        %td Shipping Method
        %td Method Name
        %td Method Description        
      - Preference.AusPostParcelServiceListDom.each {|key, method_name|
      %tr 
        %td
          = check_box_tag("shipping_methods_dom[#{key}]", value="1", @preference.shipping_methods_allowed_dom[key.to_s])      
        %td 
          = method_name
        %td
          = text_field_tag("shipping_methods_desc_dom[#{key}]", @preference.shipping_methods_desc_dom[key.to_s].nil? ? method_name : @preference.shipping_methods_desc_dom[key.to_s])   
        %td
          = text_field_tag("shipping_methods_long_desc_dom[#{key}]", @preference.shipping_methods_long_desc_dom[key.to_s].nil? ? method_name : @preference.shipping_methods_long_desc_dom[key.to_s])           
      -}
%hr  
.actions
  = submit_tag 'Save', :class=>"button"
  = link_to 'Cancel', preferences_path

:javascript
