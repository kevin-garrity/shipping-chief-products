<%= form_tagupdate_all_cache_products_path do %>
  <% @@cached_products.each_with_index do |cache_product,i| %> 
    <%= fields_for '@cached_products[#{i}]', cache_product do |pf| %>
       <%= pf.hidden_field :id %>
       <%= pf.hidden_field :product_id %>
       <%= pf.hidden_field :sho_id %>       
       <%= pf.text_field :height%>
       <%= pf.text_field :width%>
       <%= pf.text_field :length%>       
  <% end %>
  <% submit_tag %>
<% end %>