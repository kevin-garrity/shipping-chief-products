    if (!line_found) {
      for (var i = 0; i < row.children.length; i++)
      {
        cell = row.children[i];  
        text = cell.innerHTML;
        // not image cell and remove item cell
  
          if (text.indexOf("/products") != -1 && text.indexOf("<img") == -1 ) {
            //found the product cell
             headers["item"] = i;
             line_found = true;
