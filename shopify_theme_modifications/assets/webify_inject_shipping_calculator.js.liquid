          {
            headers["quantity"] = i;
            line_found = true;
          }
          // either price field or total field
          else if (text.indexOf("img") == -1 && text.indexOf("remove_item") == -1)
          {
            if (headers["price"]) // if price column is found, must be total
              headers["total"] = i;
            else
              headers["price"] = i;
          }      
      }
    } // !line_found
   }
  );
  // TODO document this
  // we assume that the first table row on a cart page is the headers
 // var table_header = $('tr').first();

  // we iterate over the table headers
/*
  table_header.children('th').each(function(index) {
