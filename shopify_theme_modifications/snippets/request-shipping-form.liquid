<!-- calculate the weight and grab us a calculator! -->
<script> 
  var total_weight = 0;
  var total_blanks = 0;
  {% for item in cart.items %}
    {% if item.grams != 0 %}
      console.log('non-zero ' + {{ item.grams }})
      total_weight = total_weight + {{ item.grams }};

    {% else %}
      console.log('zero ' + {{ item.grams }})
      total_blanks = total_blanks + 1;
    {% endif %}

  {% endfor %}
  var datahash = { weight: total_weight / 1000, blanks: total_blanks };
  update_loader_and_submit("GET", datahash, function(data) { inject_shipping_calculator(data); }); </script>
